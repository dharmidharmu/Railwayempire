<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".second">


    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape">


        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"

            >


            <AutoCompleteTextView
                android:id="@+id/emailtxt1"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="80dp"
                android:background="@color/whiteColor"
                android:ems="10"
                android:hint="email id"
                android:inputType="textEmailAddress"
                android:padding="5dp" />

            <TextView
                android:id="@+id/emailid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/pass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:labelFor="@id/emailtxt1"
                android:text="Email Id :-"
                android:textColor="@color/whiteColor"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/emailid1"
                android:layout_alignStart="@+id/emailid1"
                android:layout_below="@+id/emailtxt1"
                android:layout_marginTop="52dp"
                android:labelFor="@id/emailtxt1"
                android:text="Password :-"
                android:textColor="@color/whiteColor"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordtxt"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/pass"
                android:layout_alignEnd="@+id/emailtxt1"
                android:layout_alignLeft="@+id/emailtxt1"
                android:layout_alignRight="@+id/emailtxt1"
                android:layout_alignStart="@+id/emailtxt1"
                android:background="@android:color/white"
                android:ems="10"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="5dp" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="22dp"
                android:background="@drawable/mybtn3"
                android:focusable="true"
                android:onClick="onClicklogin"
                android:text="Login"
                android:textColor="@color/whiteColor"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/logLrgTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/pass"
                android:layout_toRightOf="@+id/pass"
                android:text="Login"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />


        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/button2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/mybtn3"
        android:onClick="onclickreset"
        android:text="resetpassword"
        android:textColor="@color/whiteColor"
        android:textSize="15dp" />

</RelativeLayout>
